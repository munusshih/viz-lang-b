---
import chatScriptUrl from "@/scripts/anonymous-chat.js?url";
---

<section class="anon-chat" data-anon-chat>
  <div class="anon-chat__meta">
    <span>Your username:</span>
    <strong data-anon-name>...</strong> /
    <button type="button" data-anon-refresh>New name</button>
  </div>
  <div class="anon-chat__log">
    <div class="anon-chat__messages" data-anon-messages></div>
  </div>

  <form class="anon-chat__form" data-anon-form>
    <input
      type="text"
      name="message"
      placeholder="Type a message"
      autocomplete="off"
      maxlength="240"
      required
    />
    <button type="submit">Send</button>
  </form>
</section>

<script type="module" src={chatScriptUrl}></script>

<style>
  .anon-chat {
    box-sizing: border-box;
    margin: 0rem 1rem;
    border-top: 2px dotted #000;
    background: transparent;
    padding: 1rem 0rem;
    font-family: "Comfortaa", sans-serif;
  }

  .anon-chat__header h2 {
    margin-bottom: 0.35rem;
    font-size: 1.5rem;
  }

  .anon-chat__note {
    opacity: 0.7;
    margin: 0;
  }

  .anon-chat__meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.5rem 0 0.75rem;
    border: 2px dotted #000;
    padding: 0.5rem;
    width: fit-content;
    font-size: 1rem;
  }

  .anon-chat__meta button {
    opacity: 0.7;
    cursor: pointer;
    margin-left: auto;
    border: none;
    background: transparent;
    padding: 0;
    text-decoration: underline;
  }

  .anon-chat__log {
    padding-top: 0.5rem;
  }

  .anon-chat__messages {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    padding: 0.25rem 0.25rem 0.5rem 0;
    height: 260px;
    overflow-y: auto;
  }

  .anon-chat__form {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
    padding-top: 0.5rem;
  }

  .anon-chat__form input {
    flex: 1;
    border: none;
    border-radius: 9999px;
    background: #fff;
    padding: 0.65rem 1rem;
  }

  .anon-chat__form button {
    opacity: 0.8;
    cursor: pointer;
    border: none;
    border-radius: 9999px;
    background: black;
    padding: 0.35rem 1rem;
    color: white;
  }

  @media (max-width: 640px) {
    .anon-chat {
      margin: 1.5rem 1rem;
      padding: 1rem;
    }

    .anon-chat__meta {
      flex-wrap: wrap;
    }

    .anon-chat__meta button {
      margin-left: 0;
    }

    .anon-chat__form {
      flex-direction: column;
    }

    .anon-chat__form button {
      width: 100%;
    }
  }
</style>
