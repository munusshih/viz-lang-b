---
import { SITE_AUTHOR, studentsWithId } from "@/config";

// Get all student names sorted alphabetically by first name
const studentNames = studentsWithId
  .map((s) => `${s.firstName} ${s.lastName}`)
  .sort()
  .join(", ");
---

<footer class="border-t border-b py-8 my-8">
  <div>
    &copy; {new Date().getFullYear()}
    {SITE_AUTHOR}, {studentNames}. All rights reserved.
  </div>
</footer>
