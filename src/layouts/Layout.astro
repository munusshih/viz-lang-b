---
import BaseHead from "@/components/BaseHead.astro";
import Analytics from "@vercel/analytics/astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image = "/opengraph.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="border-b">
    <slot />
    <Analytics />
    <script src="../scripts/page-animations.js"></script>
    <script src="/scripts/external-links.js" is:inline></script>
  </body>
</html>
